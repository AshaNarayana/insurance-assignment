<!DOCTYPE html>

<head>
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> Insurance and Policies</title>
</head>

<body>
  <%- include('__navbar'); -%>
  <h2><%= display_details.displayName %></h2>
  <% if(display_details.message != "") { %>
  <h3 style="color: brown;"><%= display_details.message %></h3>
  <% } %>
  <form method="POST" action="/userName">
    <div class="container">
      <label for="userName"><strong>Enter Client Name</strong></label>
      <input type="text" placeholder="Search using client name" name="userName" required>
      <button type="submit">Search</button>
    </div>
  </form>
  <form method="POST" action="/userId">
    <div class="container">
      <label for="userId"><b>Enter Client Id</b></label>
      <input type="text" placeholder="Find client details using client Id" name="userId" required>
      <button type="submit">Search</button>
    </div>
  </form>
  <% if(display_details.role === "admin" && display_details.message === "") { %>
  <form method="POST" action="/policy/userName">
    <div class="container">
      <label for="userName"><b>List of policies associated with user </b></label>
      <input type="text" placeholder="Search using user Name" name="userName" required>
      <button type="submit">Search</button>
    </div>
  </form>
  <form method="POST" action="/policyNumber">
    <div class="container">
      <label for="policyNumber"><b>Find user associated with policy number</b></label>
      <input type="text" placeholder="Enter policy number" name="policyNumber" required>
      <button type="submit">Search</button>
    </div>
  </form>
  <% } %>
</body>

</html>
          <button type="submit">Search</button>
          <% if(role === "admin") { %>
          <label for="userName"><b>List of policies associated with user </b></label>
          <input type="text" placeholder="Search using user Name" name="userName" required>
          <button type="submit">Search</button>
          <label for="userName"><b>Find user associated with policy number</b></label>
          <input type="text" placeholder="Enter policy number" name="userName" required>         
          <button type="submit">Search</button>
          <% } %>
        </div>
      
      </form>

</body>
